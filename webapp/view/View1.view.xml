<mvc:View controllerName="fiorilikeapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" titleAlignment="Center" >
             <!-- <headerContent>
                <Button id="_IDGenButton1" 
                icon="sap-icon://action" 
                 press="onNext"></Button>
                </headerContent> -->
   <content>
    
    <List id="idLST" items="{
        path:'/fruits',
        sorter:{
            path:'name'
        }
    }"

    mode="SingleSelectMaster"

    selectionChange="onFruitSelect"
    >
    
    <headerToolbar>
        <Toolbar id="_IDGenToolbar1" >
                <SearchField id="_IDGenSearchField1" search="onSearch" liveChange="onSearch" placeholder="Contract Number or Description"></SearchField>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
                
            </Toolbar>
        </headerToolbar>
        <items >
            <ObjectListItem 
            id="_IDGenObjectListItem1"   
            title="contract " 
            intro="" 
            number="00386768" 
            numberUnit=""
            >
            
                <attributes>
                    <ObjectAttribute id="_IDGenObjectAttribute2" text="{healthBenefit}" title="Benefit"></ObjectAttribute>
                  <ObjectAttribute id="_IDGenObjectAttribute3" text="{season}" title="season"></ObjectAttribute>
                  <!-- <ObjectAttribute id="_IDGenObjectAttribute4" text="{color}" title="color"></ObjectAttribute>
                  <ObjectAttribute id="_IDGenObjectAttribute1" text="{size}" title="size"></ObjectAttribute> -->
                </attributes>
                <firstStatus>
                  <ObjectStatus id="_IDGenObjectStatus1" text="Available" state="Success"
                  ></ObjectStatus>
                </firstStatus>
              </ObjectListItem>
            
        </items>
        
    </List>

   </content>
    </Page>
</mvc:View>
